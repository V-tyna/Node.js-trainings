<h1>Stack</h1>

{{#if isStack.length}}
{{#each isStack}}
<div class="row">
    <div class="col s5 offset-s3">
      <div class="card">
        <div class="card-image">
          <img src="{{image}}" alt="{{techName}}">
        </div>
        <div class="card-content">
          <span class="card-title">{{techName}}</span>
          <p class="duration">{{duration}}</p>
        </div>
        <div class="card-action">
          <a href="/stack/{{id}}" target="_blank">Open technology</a>
          <a href="/stack/{{id}}/edit?allow=true" target="_blank">Edit</a>
          <form action="/learningList/add" method="POST">
            <input type="hidden" name="id" value="{{id}}">
            <button class="btn btn-primary" type="submit">Start to learn</button>
          </form>
        </div>
      </div>
    </div>
  </div>
{{/each}}
{{else}}
<p>No stack yet...</p>
{{/if}}
